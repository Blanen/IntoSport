@using IntoSport.Models;

@{Html.RenderPartial("BaseHead");}

<div class="featured">

</div>
<div class="divider"></div>
<div class="featuredProducts">
    <div class="productsContainer">
    @{
                   foreach (Dictionary<string, object> product in (List<Dictionary<string, object>>)ViewData["getAllProducts"])
        {
            <div class="products">
                <div class="productImg">
                    <img src="@product["thumbnail"]" alt="@product["naam"]" />
                </div>
                <div class="productDetails">
                    <h3>@product["naam"]</h3>
                    <p>&euro;@product["prijs"]</p>
                    <a href="/product/detail?id=@product["id"]">Bekijk het product</a>
                    <a href="/cart/addToCart?ID=@product["id"]&Quantity=1">Plaats in winkelwagen &raquo;</a>
                </div>
            </div>
        }
    }
    </div>
</div>

@{Html.RenderPartial("BaseFooter");}
